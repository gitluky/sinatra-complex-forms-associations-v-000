<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input type="text" name="pet[name]" value="<%= @pet.name%>" id="pet_name">
  <br><br>
  <p>Choose from existing owners: </p>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= "checked" if @pet.owner_id = owner.id%>><%= owner.name %></input>
  <% end %>
  <br><br>
  <p>or create a new owner</p>
  <label>Name:</label>
  <input type="text" name="owner[name]" id="owner_name">

  <input type="submit" value="Update Pet">
</form>
